

<% if @current_user == true %>
<%= link_to "Log In With Facebook", "auth/facebook" %>
<% else %>
<%= link_to 'Log Out', signout_path %>
<% end %>

<%= form_tag('/email', :method => 'post') do %>
<div>
<%= label_tag :to %>
<%= text_field_tag :to %>
</div>
<div>
<%= label_tag :subject %>
<%= text_field_tag :subject %>
</div>
<div>
<%= label_tag :body %>
<%= text_field_tag :body %>
</div>
<div>
	<%= submit_tag("Send Email") %>
</div>
<% end %>